.contacts.clearfix
    table.table.table-hover.contacts-list(ng-if="nav.contactsList")
        thead.table-head
            - var fields = ['$id','firstname','lastname','phone','email']
            each title,ind in ['#','Имя','Фамилия','Телефон','Email']
                th(ng-click="reverse=!reverse;order(" + "'" + fields[ind] + "'" + ",reverse)") #{title}
        tbody
            tr.contacts-list__row(ng-repeat="contact in contacts" ng-click="editContact(contact.$id)")
                td {{contact.$id}}
                td {{contact.firstname}}
                td {{contact.lastname}}
                td {{contact.phone}}
                td {{contact.email}}
    .contacts-grid.cf(ng-if="!nav.contactsList")
        .contact.contacts_left(ng-repeat="contact in contacts")
            .contact-image
                img(src="http://lorempixel.com/400/400/")
            .contact__name {{contact.firstname}} {{contact.lastname}}
            .contact__phone {{contact.phone}}
            .contact__email {{contact.email}}